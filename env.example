# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/law_search
POSTGRES_DB=law_search
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379

# AI Services
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=Law Search System
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=True

# Monitoring
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090

# Elasticsearch (for advanced search)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=law_articles

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Cache Configuration
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# Development
DEVELOPMENT_MODE=True
HOT_RELOAD=True
